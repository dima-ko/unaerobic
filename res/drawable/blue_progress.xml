<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                    android:startColor="#ff2d2e2d"
                    android:centerColor="#ff1a1d1a"
                    android:centerY="0.75"
                    android:endColor="#ff242624"
                    android:angle="270"
                    />
        </shape>
    </item>

    <item
            android:id="@android:id/progress"
            >
        <clip>
            <shape>
                <corners
                        android:radius="10dip" />
                <gradient
                        android:startColor="#FF11EEFF"
                        android:endColor="#FF1166FF"
                        android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>